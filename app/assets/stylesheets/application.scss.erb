@import "bootstrap-sprockets";
@import "bootstrap";


.main-bg{
	background: linear-gradient(rgba(0, 0, 0, .7), rgba(0, 0, 0, .7)), url(<%= asset_path('bg.jpg')%>);
	background-repeat: no-repeat;
	background-size: cover;
	background-position: center center;
	position: relative;
	min-height: 100vh;
	padding-bottom: 50px;
	padding-top: 100px;
	text-align: center;
}

.white{
	color: #fff;
}

.btn-sky{
	width: 200px;
	color: #fff !important;
}

#error_explanation{
	width: 200px;
	margin: 20px auto;
	text-align: center;
}

.field_with_errors{
	display: block;
	background-color: transparent;
}

#map {
	height: 200px;
	width: 100%;
}

.index-weather{
	font-size: 52px;
	display: inline-block;
	font-weight: bold;
}

.index-sumary{
	font-size: 30px;
	margin: 30px 0px 30px;
	line-height: 35px
}

.sh{
	text-align: center;
	font-size: 30px;
	margin-top: 30px;
	margin-bottom: 20px;
}

.pc{
	display: inline-block;
}

.location{
	text-align: center;
	margin: 20px 10px 20px;
	border: 1px solid grey;
	padding: 20px;
	height: 150px;

}
.map_icon{
	width: 50px;
	display: inline-block;
}
.show-pc{
	display: block;
	width: 150px;
	color: #fff;
	margin: 20px auto;
}

.show-pc:visited{
	color: #fff;
}


/*Show*/

.progress {
    display: inline-block;
    margin: 0px !important;
}

.inline{
	display: inline-block;
}

.forecast-title{
	text-align: center;
	font-size: 30px;
	margin: 30px 0 20px;
}

.forecast-info{
	margin-left: 10%;
	width: 80%;
	border-bottom: 1px solid #DDD;
	border-top: 1px solid #DDD;
	padding-top: 10px;
	padding-bottom: 10px
}

.forecast-day{
	font-size: 25px;
	display: block;
	width: 15%;
}

.forecast-icon{
	display: inline-block;
}
.forecast-summary{
	display: block;
	margin-left: 0px;
	margin-right: 20px;
	width: 100%;
}

.forecast-temp{
	font-size: 20px;
}

.historic{
	text-align: center;
	font-size: 30px;
	margin: 30px 0 20px;	
}



/***************** MEDIA QUERIES ******************/


/* Smartphones (landscape) ----------- */
@media only screen and (min-width : 321px) {

}


/* Tablets (portrait and landscape) ----------- */
@media only screen and (min-width : 768px) {

	#map {
		height: 400px;
		width: 100%;
	}
    
	
}

/* Desktops and laptops ----------- */
@media only screen  and (min-width : 992px) {
	#map {
		height: 400px;
		width:  400px;
		margin: 0 auto;
	}
	.location{
		height: 150px;
	}

	.forecast-day{
		font-size: 25px;
		display: inline-block;
		width: 15%;
	}
	.forecast-summary{
		display: inline-block;
		margin-left: 20px;
		margin-right: 20px;
		width: 35%;
	}
    
}

/* Large screens ----------- */
@media only screen  and (min-width : 1824px) {
	
}
